{
  "Name": "s3-public-remediation-rule",
  "EventPattern": {
    "source": ["aws.s3"],
    "detail-type": ["AWS API Call via CloudTrail"],
    "detail": {
      "eventSource": ["s3.amazonaws.com"],
      "eventName": [
        "PutBucketAcl",
        "PutBucketPublicAccessBlock",
        "CreateBucket"
      ]
    }
  }
}
